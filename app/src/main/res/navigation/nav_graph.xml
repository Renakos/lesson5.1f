<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/editUserInfoFragment"
        android:name="com.example.lesson51.EditUserInfoFragment"
        android:label="EditUserInfoFragment"
        tools:layout="@layout/fragment_edit_user_info"/>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.lesson51.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.lesson51.UserInfoFragment"
        android:label="UserInfoFragment"
        tools:layout="@layout/fragment_user_info">
        <action
            android:id="@+id/action_userInfoFragment_to_editUserInfoFragment"
            app:destination="@id/editUserInfoFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.lesson51.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

</navigation>